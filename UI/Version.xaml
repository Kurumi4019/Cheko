<Window x:Class="mp4Utl.UI.Version"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mp4Utl.UI"
        mc:Ignorable="d"
        Title="mp4Utl[バージョン情報]" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer
        Margin="0"
        HorizontalScrollBarVisibility="Hidden"
        VerticalScrollBarVisibility="Visible">
            <TreeView>
            <TreeViewItem Header="ソフトウェア情報" IsSelected="True"/>
            <TreeViewItem Header="アップデート情報"/>
            <TreeViewItem Header="使用ツールなど"/>
            </TreeView>
        </ScrollViewer>
    </Grid>
</Window>
